@model HotelPatito.Models.Tipadas.TipoHabitacionConImagenes
@{
    ViewBag.Title = "ActualizarHabitacion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="agileinfo-grap">
        <div class="agileits-box">
            <header class="agileits-box-header clearfix">
                <h3 style="color:darksalmon">Modificar Habitación</h3>
            </header>
            <div class="agileits-box-body clearfix">
                <p style="font-style:italic"><b></b></p>
            </div>
        </div>
    </div>
    <div id="fh5co-wrap">
        <div class="fh5co-section">
            <div class="container">
                <div class="row">
                   
                    <div class="container border border-success" >
                        <form class="form-horizontal" action="../Habitacion/ActualizarHabitaciones" method="post" enctype="multipart/form-data">
                            <div class="form-group ">
                                <h1 style="text-align: center;" class="text-success">Modificar Habitación</h1>
                                <br>
                                <label for="Nombre" class="control-label col-md-2 col-md-offset-2">Nombre</label>
                                <div class="col-md-2">
                                    <input class="form-control" type="text" placeholder="tarifa" value="@Model.tipoHabitacionX.nombre_Tipo_Habitacion" id="tipo" name="tipo">
                                </div>

                                <label for="Nombre" class="control-label col-md-2">Tarifa Diaria:</label>
                                <div class="col-md-2">
                                    <input class="form-control" type="text" placeholder="tarifa" value="@Model.tipoHabitacionX.tarifa_Tipo_Habitacion" id="tarifa" name="tarifa">
                                </div>
                            </div>
                            <br /><br />

                            <div class="form-group">
                                <label for="descripcion" class="control-label col-md-2 ">Descripción: </label>
                                <div class="col-md-6">
                                    <textarea class="form-control col-md-12" rows="5" name="descripcion" id="descripcion">@Model.tipoHabitacionX.descripcion_Tipo_Habitacion</textarea>
                                </div>
                            </div>
                            <br /><br />


                            
                            <div class="form-group">
                                @{var base64ImagenTipoHab = Convert.ToBase64String(@Model.imagenX);
                                  var imgSrcImagenTipoHab = String.Format("data:image/gif;base64,{0}", base64ImagenTipoHab);


                                <img src="@imgSrcImagenTipoHab" width="200" height="200" class="img-responsive control-label col-md-2 col-md-offset-2">
                                    <label for="file" class="control-label col-md-2 ">Seleccione una imagen</label>
                                    <div class="col-md-2">
                                        <input type="file" id="file" name="file">
                                    </div>}
                                <div style="visibility:hidden" class="col-md-2">
                                    <input style="visibility:hidden" type="text" id="imagenActual" name="imagenActual" value="@Model.idImagen">
                                </div>
                                <div style="visibility:hidden" class="col-md-2">
                                    <input style="visibility:hidden" type="text" id="descripcionImagenActual" name="descripcionImagenActual" value="@Model.descripcionImagen">
                                </div>
                            </div>



                            <div class="form-group ">
                                <div class="col-md-6 col-md-offset-4">
                                    <input type="submit" class="btn btn-success col-md-4" value="Guardar" id="BtnGuardar">


                                </div>
                            </div>

                        </form>
                        <form action="../Habitacion/AdministrarHabitaciones" method="post">
                            <div class="form-group ">
                                <div class="col-md-6 col-md-offset-4">
                                    <input type="submit" class="btn btn-danger col-md-4" value="Cancelar" id="BtnCancel">
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
                <br><br>
                
            </div>
        </div>
       
    </div>