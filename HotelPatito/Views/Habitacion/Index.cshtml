@model PagedList.IPagedList<HotelPatito.Models.Tipadas.Habitacion>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="agileinfo-grap">
    <div class="agileits-box">
        <header class="agileits-box-header clearfix">
            <h3 style="color:#e9967a">Estado del Hotel Hoy</h3>
        </header>
        <div class="agileits-box-body clearfix">
            <p style="font-style:italic"><b></b></p>
        </div>
    </div>
</div>

<div class="agileinfo-grap">
    <div class="agileits-box">
        <header class="agileits-box-header clearfix">
            <h3>
                <script>


                    var mydate = new Date();
                    var year = mydate.getYear();
                    if (year < 1000)
                        year += 1900;
                    var day = mydate.getDay();
                    var month = mydate.getMonth() + 1;
                    if (month < 10)
                        month = "0" + month;
                    var daym = mydate.getDate();
                    if (daym < 10)
                        daym = "0" + daym;
                    document.write("<normal><font color='e9967a' face='Arial'><b>" + daym + "/" + month + "/" + year + "</b></font></normal>")

                </script>
            </h3>
        </header>
        <div class="agileits-box-body clearfix">
            <p style="font-style:italic"><b></b></p>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px; text-align:center;">
    <table class="table">
        <thead>
            <tr>
                <th width="50px" style="text-align:center;font-family:Arial;font-size:20px;font-style:normal;">Numero de Habitación</th>
                <th width="50px" style="text-align:center;font-family:Arial;font-size:20px;font-style:normal;">Tipo</th>
                <th width="50px" style="text-align:center;font-family:Arial;font-size:20px;font-style:normal;">Estado</th>
            </tr>
        </thead>
        @foreach (var habitacion in Model)
        {
            <tr>
                <td width="50px" style="font-family:Arial;font-size:16px;font-style:normal;" >@habitacion.numero_Habitacion</td>
                <td width="50px" style="font-family:Arial;font-size:16px;font-style:normal;">@habitacion.Tipo_Habitacion.nombre_Tipo_Habitacion</td>
                <td width="50px" style="font-family:Arial;font-size:16px;font-style:normal;">@habitacion.estado_Habitacion</td>
            </tr>
        }
    </table>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
    <br />

    <div class="container" style="text-align:center;width:100px;height:100px;">
        <a href="@Url.Action("Export","Habitacion")" style="background-color:#ffffff"><img src="~/images/print.png" width="100px" height="100px"/></a>

    </div>

    <br />

    <br>
</div>





