@model IEnumerable<HotelPatito.Models.Tipadas.Hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="agileinfo-grap">
    <div class="agileits-box">
        <header class="agileits-box-header clearfix">
            <h3 style="color:darksalmon">CONTACTENOS</h3>
        </header>
    </div>
</div>

<div id="fh5co-wrap">
    <div class="fh5co-section">
        <div class="container">

            @foreach (var item in Model)
            {
                <div class="alert alert-success" role="alert">

                    <center><strong style="font-family:Arial; font-size:large"> Hotel @Html.DisplayFor(modelItem => item.nombre_Hotel)</strong></center>
                    <br /><br />

                    <center><strong style="font-family:Arial; font-size:large"> @Html.DisplayFor(modelItem => item.telefono_Hotel)</strong></center>
                    <br /><br />

                    <center><strong style="font-family:Arial; font-size:large"> Apartado postal @Html.DisplayFor(modelItem => item.aptoPostal_Hotel)</strong></center>

                    <br /><br />
                    <center><strong style="font-family:Arial; font-size:large"> @Html.DisplayFor(modelItem => item.email_Hotel)</strong></center>
                    <br />

                </div>

            }
        </div>
    </div>
</div>